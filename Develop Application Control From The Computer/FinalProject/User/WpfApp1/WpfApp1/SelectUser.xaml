<UserControl x:Class="WpfApp1.SelectUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Style cho Button -->
        <Style x:Key="SelectButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="#1976D2"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" 
                Background="#0f3460" 
                Padding="30"
                BorderBrush="#FFD700"
                BorderThickness="0,0,0,3">
            <StackPanel>
                <TextBlock Text="CÂU HỎI PHỤ" 
                          FontSize="48" 
                          FontWeight="Bold"
                          Foreground="#FFD700"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>

                <TextBlock Text="TRẢ LỜI ĐÚNG VÀ NHANH NHẤT ĐỂ CÓ THỂ CHƠI" 
                          FontSize="24" 
                          Foreground="White"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          HorizontalAlignment="Center"
                          MaxWidth="700"
                          Margin="0,0,0,15"/>

                <Border Background="#4CAF50" 
                       CornerRadius="10"
                       Padding="15,8"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0">
                    <TextBlock x:Name="txtPlayerIDDisplay"
                              Text="ID: Chờ kết nối..." 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- ===== CONTENT ===== -->
        <Grid Grid.Row="1" Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Question -->
            <Border Grid.Row="0"
                   Background="#16213e" 
                   CornerRadius="20"
                   Padding="40"
                   Margin="0,0,0,30"
                   BorderBrush="#FFD700"
                   BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#FFD700" 
                                    BlurRadius="20" 
                                    ShadowDepth="0"
                                    Opacity="0.3"/>
                </Border.Effect>
                <TextBlock x:Name="txtQuestion"
                          Text="Sắp xếp các sự kiện sau theo thứ tự thời gian?"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          LineHeight="42"/>
            </Border>

            <!-- Answers -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnAnswer1"
                       Grid.Row="0" 
                       Grid.Column="0"
                       Content="1. Đáp án A"
                       Style="{StaticResource SelectButton}"
                       FontSize="24"
                       Height="90"
                       Margin="10"
                       Click="Button_Click"/>

                <Button x:Name="btnAnswer2"
                       Grid.Row="0" 
                       Grid.Column="1"
                       Content="2. Đáp án B"
                       Style="{StaticResource SelectButton}"
                       FontSize="24"
                       Height="90"
                       Margin="10"
                       Click="Button_Click_1"/>

                <Button x:Name="btnAnswer3"
                       Grid.Row="1" 
                       Grid.Column="0"
                       Content="3. Đáp án C"
                       Style="{StaticResource SelectButton}"
                       FontSize="24"
                       Height="90"
                       Margin="10"
                       Click="Button_Click_2"/>

                <Button x:Name="btnAnswer4"
                       Grid.Row="1" 
                       Grid.Column="1"
                       Content="4. Đáp án D"
                       Style="{StaticResource SelectButton}"
                       FontSize="24"
                       Height="90"
                       Margin="10"
                       Click="Button_Click_3"/>
            </Grid>
        </Grid>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="2" 
               Background="#0f3460" 
               Padding="25"
               BorderBrush="#FFD700"
               BorderThickness="0,3,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Timer -->
                <Border Grid.Column="0"
                       Background="#FF5722" 
                       CornerRadius="12"
                       Padding="20,12"
                       HorizontalAlignment="Left"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏱ " 
                                  FontSize="28" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtTimer" 
                                  Text="60" 
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  MinWidth="60"
                                  TextAlignment="Center"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="s" 
                                  FontSize="28" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Grid.Column="1"
                       Background="#1976D2" 
                       CornerRadius="12"
                       Padding="30,12"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <TextBlock x:Name="txtStatus"
                              Text="Chờ bắt đầu..."
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Players Count -->
                <Border Grid.Column="2"
                       Background="#4CAF50" 
                       CornerRadius="12"
                       Padding="20,12"
                       HorizontalAlignment="Right"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥 " 
                                  FontSize="28" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtPlayerCount" 
                                  Text="6" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text=" người chơi" 
                                  FontSize="20" 
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>