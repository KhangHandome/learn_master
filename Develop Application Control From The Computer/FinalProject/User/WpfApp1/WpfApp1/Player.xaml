<UserControl x:Class="WpfApp1.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Text Shadow Effect -->
        <DropShadowEffect x:Key="TextShadow" 
                         Color="Black" 
                         BlurRadius="10" 
                         ShadowDepth="2" 
                         Opacity="0.8"/>

        <!-- Style cho Button câu trả lời -->
        <Style x:Key="AnswerButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#2196F3" 
                                CornerRadius="15"
                                BorderBrush="#1976D2"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Style cho Button trợ giúp -->
        <Style x:Key="HelpButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Border Grid.Column="0" 
                    Background="#1a1a2e" 
                    CornerRadius="15"
                    Padding="15"
                    VerticalAlignment="Center">
                <StackPanel>
                    <Image Source="/logo.png" 
                           Width="120" 
                           Height="120"
                           Stretch="Uniform"/>
                </StackPanel>
            </Border>

            <!-- Title -->
            <StackPanel Grid.Column="1" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20,0">
                <TextBlock Text="AI LÀ TRIỆU PHÚ" 
                          FontSize="42" 
                          FontWeight="Bold"
                          Foreground="#FFD700"
                          HorizontalAlignment="Center"
                          Effect="{StaticResource TextShadow}"/>
                <TextBlock Text="GAME ĐANG DIỄN RA" 
                          FontSize="16" 
                          Foreground="#4CAF50"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Prize and Help -->
            <StackPanel Grid.Column="2" 
                       VerticalAlignment="Center">
                <!-- Prize Display -->
                <Border Background="#4CAF50"
                        Width="400"
                       CornerRadius="12"
                       Padding="20,10"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="GIẢI THƯỞNG" 
                                  FontSize="14" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  FontWeight="Bold"/>
                        <TextBlock x:Name="labelPrize"
                                  Text="200.000 đ" 
                                  FontSize="26" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Help Buttons -->
                <Border Background="#16213e" 
                       CornerRadius="12"
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="TRỢ GIÚP" 
                                  FontSize="14" 
                                  Foreground="#BBB"
                                  HorizontalAlignment="Center"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10"/>

                        <Button x:Name="btn5050"
                               Content="🔀 50:50"
                               Style="{StaticResource HelpButton}"
                               Background="#FF9800"
                               Height="45"
                               Width="150"
                               FontSize="18"
                               Margin="0,0,0,8"
                               Click="Button_Click_5050"/>

                        <Button x:Name="btnAudience"
                               Content="👥 Hỏi khán giả"
                               Style="{StaticResource HelpButton}"
                               Background="#2196F3"
                               Height="45"
                               Width="150"
                               FontSize="16"
                               Click="Button_Click_Audience"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ===== MAIN CONTENT ===== -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Question Box -->
            <Border Grid.Row="0"
                   Background="#16213e" 
                   CornerRadius="20"
                   Padding="30"
                   Margin="0,0,0,20"
                   BorderBrush="#FFD700"
                   BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#FFD700" 
                                    BlurRadius="20" 
                                    ShadowDepth="0"
                                    Opacity="0.3"/>
                </Border.Effect>
                <TextBlock x:Name="labelQuestion"
                          Text="Câu hỏi sẽ xuất hiện ở đây?"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="White"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          LineHeight="38"/>
            </Border>

            <!-- Answers Grid -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Answer A -->
                <Button x:Name="btnAnswerA"
                       Grid.Row="0" 
                       Grid.Column="0"
                       Content="A) Đáp án 1"
                       Style="{StaticResource AnswerButton}"
                       FontSize="22"
                       Height="90"
                       Margin="5"
                       Click="Button_Click_A"/>

                <!-- Answer B -->
                <Button x:Name="btnAnswerB"
                       Grid.Row="0" 
                       Grid.Column="1"
                       Content="B) Đáp án 2"
                       Style="{StaticResource AnswerButton}"
                       FontSize="22"
                       Height="90"
                       Margin="5"
                       Click="Button_Click_B"/>

                <!-- Answer C -->
                <Button x:Name="btnAnswerC"
                       Grid.Row="1" 
                       Grid.Column="0"
                       Content="C) Đáp án 3"
                       Style="{StaticResource AnswerButton}"
                       FontSize="22"
                       Height="90"
                       Margin="5"
                       Click="Button_Click_C"/>

                <!-- Answer D -->
                <Button x:Name="btnAnswerD"
                       Grid.Row="1" 
                       Grid.Column="1"
                       Content="D) Đáp án 4"
                       Style="{StaticResource AnswerButton}"
                       FontSize="22"
                       Height="90"
                       Margin="5"
                       Click="Button_Click_D"/>
            </Grid>
        </Grid>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="2" 
               Background="#0f3460" 
               Padding="20"
               BorderBrush="#FFD700"
               BorderThickness="0,2,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Timer -->
                <Border Grid.Column="0"
                       Background="#FF5722" 
                       CornerRadius="10"
                       Padding="15,10"
                       HorizontalAlignment="Left"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏱ " 
                                  FontSize="24" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtTimer" 
                                  Text="30" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  MinWidth="50"
                                  TextAlignment="Center"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="s" 
                                  FontSize="24" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Stop Button -->
                <Button Grid.Column="1"
                       Content="⛔ DỪNG CUỘC CHƠI"
                       Style="{StaticResource HelpButton}"
                       Background="#F44336"
                       FontSize="22"
                       Width="280"
                       Height="60"
                       Click="Button_Click_Stop"/>

                <!-- Question Number -->
                <Border Grid.Column="2"
                       Background="#1976D2" 
                       CornerRadius="10"
                       Padding="15,10"
                       HorizontalAlignment="Right"
                       BorderBrush="#FFD700"
                       BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Câu " 
                                  FontSize="20" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtQuestionNum" 
                                  Text="1" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#FFD700"
                                  VerticalAlignment="Center"
                                  Margin="5,0"/>
                        <TextBlock Text="/ 15" 
                                  FontSize="20" 
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>