<UserControl x:Class="WpfApp1.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF0B28CC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Các Button trả lời -->
        <Button Content="A) Answers 1" HorizontalAlignment="Left" Margin="114,397,0,0" FontSize="22" VerticalAlignment="Top" Width="350" Height="50" Click="Button_Click_A"/>
        <Button Content="B) Answers 1" HorizontalAlignment="Left" Margin="498,455,0,0" FontSize="22" VerticalAlignment="Top" Width="350" Height="50" Click="Button_Click_B"/>
        <Button Content="C) Answers 1" HorizontalAlignment="Left" Margin="114,455,0,0" FontSize="22" VerticalAlignment="Top" Width="350" Height="50" Click="Button_Click_C"/>
        <Button Content="D) Answers 1" HorizontalAlignment="Left" Margin="498,397,0,0" FontSize="22" VerticalAlignment="Top" Width="350" Height="50" Click="Button_Click_D"/>

        <!-- Các Button trợ giúp -->
        <Button Content="50/50" HorizontalAlignment="Left" Margin="821,71,0,0" FontSize="22" VerticalAlignment="Top" Width="157" Height="50" Click="Button_Click"/>
        <Button Content="Ask Everyone" HorizontalAlignment="Left" Margin="821,138,0,0" FontSize="22" VerticalAlignment="Top" Width="157" Height="50" Click="Button_Click"/>

        <!-- Label và Image -->
        <Label x:Name ="labelQuestion" Content="Câu hỏi " FontSize="24" Height="100" Margin="114,297,152,253" Foreground="#FFDADC0C" />
        <Image HorizontalAlignment="Left" Height="162" Margin="30,26,0,0" VerticalAlignment="Top" Width="188" Source="/logo.png"/>
        <Button Content="Dừng cuộc chơi" HorizontalAlignment="Left" Margin="306,558,0,0" FontSize="22" VerticalAlignment="Top" Width="350" Height="50" Click="Button_Click"/>
        <Label x:Name="labelPrize" Content="Mốc thưởng" FontSize="24" Height="100" Margin="481,292,-215,258" BorderBrush="White" Foreground="#FFFFFBFB" />

    </Grid>
</UserControl>
